# Environment
NODE_ENV=development
PORT=3000

# OAuth (Notion)
OAUTH_CLIENT_ID=your_notion_client_id
OAUTH_CLIENT_SECRET=your_notion_client_secret

# Security
JWT_SECRET_KEY=your_jwt_secret_key
AUTHORIZATION_CODE=your_authorization_code

# Redirect URIs
NOTION_REDIRECT_URI=https://your-ngrok-url/api/oauth/notion/callback


# Database
DATABASE_URL=your_database_url

# Supabase
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key
SUPABASE_DATABASE_PASSWORD=your_supabase_password

# DocuSign
DOCUSIGN_URL_BASE=apps-d.docusign.com  # Use apps.docusign.com for production 